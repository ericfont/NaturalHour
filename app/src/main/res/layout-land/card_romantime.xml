<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ui.RomanTimeFragment">

    <com.forrestguice.suntimes.romantime.ui.RomanTimeClockView
        android:id="@+id/clockface"
        android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clockface">

        <TextView
            android:id="@+id/text_date" android:gravity="right|end"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="date" android:layout_margin="8dp" />

        <TextView
            android:id="@+id/text_sunrise" android:gravity="right|end"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="sunrise" android:layout_margin="8dp" />

        <TextView
            android:id="@+id/text_sunset" android:gravity="right|end"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="sunset" android:layout_margin="8dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>