<resources>
    <!-- flags -->
    <bool name="clockface_start_at_top">false</bool>
    <bool name="clockface_show_timezone">true</bool>
    <bool name="clockface_show_vigilia">true</bool>
    <bool name="clockface_show_hand_simple">false</bool>
    <bool name="clockface_show_ticks_5m">true</bool>
    <bool name="clockface_show_ticks_15m">true</bool>
    <bool name="clockface_show_background_day">false</bool>
    <bool name="clockface_show_background_night">false</bool>
    <bool name="clockface_show_background_ampm">true</bool>

    <!-- dimensions -->
    <dimen name="clockface_center_width">0dp</dimen>
