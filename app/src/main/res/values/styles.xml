<resources>

    <style name="AppTheme" parent="RomanTimeAppTheme.Dark" />

    <!-- Light theme -->
    <style name="RomanTimeAppTheme.Light" parent="SuntimesAddonTheme.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="colorAction">@color/colorAction_light</item>
        <item name="colorDisabled">@color/colorDisabled_light</item>

        <item name="icToday">@drawable/ic_today_light</item>
        <item name="icHelp">@drawable/ic_help_light</item>
        <item name="icAbout">@drawable/ic_about_light</item>

        <item name="cardViewStyle">@style/RomanTimeCardView.Light</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

        <item name="colorDate">@color/colorDate_light</item>
        <item name="colorLabel">@color/colorLabel_light</item>
        <item name="colorTime">@color/colorTime_light</item>
        <item name="colorValue">@color/colorValue_light</item>

        <item name="clockColorBackground">@color/clockColorBackground_light</item>
        <item name="clockColorFrame">@color/clockColorFrame_light</item>
        <item name="clockColorCenter">@color/clockColorCenter_light</item>
        <item name="clockColorHand">@color/clockColorHand_light</item>
        <item name="clockColorLabel1">@color/clockColorLabel1_light</item>
        <item name="clockColorLabel2">@color/clockColorLabel2_light</item>
        <item name="clockColorDayBorder">@color/clockColorDayBorder_light</item>
        <item name="clockColorDayFill">@color/clockColorDay_light</item>
        <item name="clockColorDayText">@color/clockColorDayLabel_light</item>
        <item name="clockColorNightBorder">@color/clockColorNightBorder_light</item>
        <item name="clockColorNightFill">@color/clockColorNight_light</item>
        <item name="clockColorNightText">@color/clockColorNightLabel_light</item>
    </style>

    <!-- Dark theme -->
    <style name="RomanTimeAppTheme.Dark" parent="SuntimesAddonTheme.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="colorAction">@color/colorAction_dark</item>
        <item name="colorDisabled">@color/colorDisabled_dark</item>

        <item name="icToday">@drawable/ic_today</item>
        <item name="icHelp">@drawable/ic_help</item>
        <item name="icAbout">@drawable/ic_about</item>

        <item name="cardViewStyle">@style/RomanTimeCardView.Dark</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="colorDate">@color/colorDate_dark</item>
        <item name="colorLabel">@color/colorLabel_dark</item>
        <item name="colorTime">@color/colorTime_dark</item>
        <item name="colorValue">@color/colorValue_dark</item>

        <item name="clockColorBackground">@color/clockColorBackground_dark</item>
        <item name="clockColorFrame">@color/clockColorFrame_dark</item>
        <item name="clockColorCenter">@color/clockColorCenter_dark</item>
        <item name="clockColorHand">@color/clockColorHand_dark</item>
        <item name="clockColorLabel1">@color/clockColorLabel1_dark</item>
        <item name="clockColorLabel2">@color/clockColorLabel2_dark</item>
        <item name="clockColorDayBorder">@color/clockColorDayBorder_dark</item>
        <item name="clockColorDayFill">@color/clockColorDay_dark</item>
        <item name="clockColorDayText">@color/clockColorDayLabel_dark</item>
        <item name="clockColorNightBorder">@color/clockColorNightBorder_dark</item>
        <item name="clockColorNightFill">@color/clockColorNight_dark</item>
        <item name="clockColorNightText">@color/clockColorNightLabel_dark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RomanTimeCardView" parent="Base.CardView" />
    <style name="RomanTimeCardView.Dark">
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>
    <style name="RomanTimeCardView.Light">
        <item name="cardBackgroundColor">@color/card_background_light</item>
    </style>

    <style name="TableHeadDateView">                                     <!-- date header text -->
        <!--<item name="android:textColor">?attr/date_buttonSelector</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
